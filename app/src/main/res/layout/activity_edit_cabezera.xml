<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cotizacion.EditCabezera">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--sección Cabecera-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_cotizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFF"
                android:elevation="20dp"
                android:minHeight="70dp"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:weightSum="100">


                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_datosClientCabezera"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_base"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="15dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_user"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_datosClientCabezera"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Info cliente" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="vertical"

                        android:animateLayoutChanges="true"
                        android:layoutDirection="ltr"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="marquee"
                                    android:gravity="center_vertical"
                                    android:maxLines="2"
                                    android:text="Técnico Asignado"
                                    android:textColor="@color/colorPrimary"
                                    style="@style/sizeTextView"  />

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_tecnico"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="marquee"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textStyle="bold"
                                    style="@style/sizeTextView"  />

                                <TextView
                                    android:id="@+id/tv_cliente"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="marquee"
                                    android:gravity="center_vertical"
                                    android:text="Nombre Cliente: ARTEUS COMP SAC"
                                    android:textColor="@color/colorPrimary"
                                    style="@style/sizeTextView"  />

                                <TextView
                                    android:id="@+id/tv_ruc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="marquee"
                                    android:gravity="center_vertical"
                                    android:text="RUC: 20600114299"
                                    android:textColor="@color/colorPrimary"
                                    style="@style/sizeTextView"  />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--FIN CABECERA-->
            <!--sección PRODUCTOS-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_jobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFF"
                android:elevation="20dp"
                android:minHeight="70dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:weightSum="100">


                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_productoAddCot"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_base"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="15dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_almacen"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            style="@style/sizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_productoAddCot"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="Dato comercial" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/list_jobs"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="100"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="100">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Moneda" />

                            <Spinner
                                android:id="@+id/sp_monedaCabezera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Spinner" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Lista de precio" />

                            <Spinner
                                android:id="@+id/sp_listPrecioCabezera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Spinner" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Validez" />

                            <Spinner
                                android:id="@+id/sp_validezCabezera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Spinner" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Condicion de Pago" />

                            <Spinner
                                android:id="@+id/sp_CondicionpagoCabezera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Spinner" />

                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--FIN PRODUCTOS-->
            <!--Observaciones-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_solutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFF"
                android:elevation="20dp"
                android:minHeight="70dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:weightSum="100">


                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ic_observacion"
                            android:layout_width="52dp"
                            android:layout_height="52dp"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_base"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="15dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_add_photo"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            style="@style/sizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ic_observacion"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="Vendedor" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/list_solutions"
                        android:layout_width="0dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="100"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Vendedor Asignado" />

                            <Spinner
                                android:id="@+id/sp_vendedorasignadoCabezera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="Spinner" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Fin Observaciones-->
            <!--sección TOTALES-->
            <!--FIN TOTALES-->

        </LinearLayout>

        <!---->
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_save"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorBackground"
            android:background="@color/colorPrimary"
            android:layout_width="180dp"
            android:text="Guardar y Salir"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorBackground"
            android:layout_width="180dp"
            android:text="Cancelar"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>