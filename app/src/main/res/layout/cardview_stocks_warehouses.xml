<androidx.cardview.widget.CardView android:id="@+id/cardViewCotizaciones"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4e4e4"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numerocotizacion"
                style="@style/sizeTextView"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="203dp"
                android:fontFamily="sans-serif-condensed"
                android:text="STOCK ACTUAL : 4.00 UND"
                android:textColor="@color/negro" />


            <TextView
                android:id="@+id/preciocotizacion"
                style="@style/sizeTextView"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="sans-serif-condensed"
                android:text="LISTA PRECIO:  PRECIO POR MAYOR"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/ruc"
                style="@style/sizeTextView"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="113dp"
                android:fontFamily="sans-serif-condensed"
                android:text="PRECIO VENTA:  S/. 15.00"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/razonsocial"
                style="@style/sizeTextView"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="113dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="ALMACEN: TIENDA 1A-112 "
                android:textColor="@color/negro" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/darkGrey" />
    </LinearLayout>

</androidx.cardview.widget.CardView>