                        <TextView
                            android:id="@+id/name"
                            style="@style/sizeTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="TABLET SAMSUNG A3P"
                            android:textColor="@color/negro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/document"
                            style="@style/sizeTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginStart="70dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="TBLS0020"
                            android:textColor="@color/negro" />

                        <TextView
                            android:id="@+id/document3"
                            style="@style/sizeTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Precio Unit: S/. 1,000.00"
                            android:textColor="@color/negro" />

                        <TextView
                            android:id="@+id/document4"
                            style="@style/sizeTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="42dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Precio Total: S/. 1,000.00"
                            android:textColor="@color/negro" />

                        <LinearLayout

                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/document"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="47dp"
                            android:layout_marginEnd="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/increase"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_image_view"
                                android:src="@drawable/ic_add"
                                app:tint="@color/colorPrimaryDark" />

                            <TextView
                                android:id="@+id/quantity"
                                style="@style/sizeTextView"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/negro" />

                            <ImageView
                                android:id="@+id/decrease"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_image_view"
                                android:src="@drawable/ic_less"
                                app:tint="@color/colorPrimaryDark" />


                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorPrimaryDark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/activate_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:tag="0">

                <LinearLayout
                    android:layout_width="402dp"
                    android:layout_height="80dp"
                    android:background="#e4e4e4"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="153dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_almacen"
                            app:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/name"
                            style="@style/sizeTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="FUNDA TABLET SAMSUNG A3P"
                            android:textColor="@color/negro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/document"
                            style="@style/sizeTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginStart="70dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="FUND0001"
                            android:textColor="@color/negro" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorPrimaryDark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subtotal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="20dp"

            android:text="Sub-Total:                                                       S/. 1,271.19"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/subtotal_descuento"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="20dp"

            android:text="IGV 18% :                                                           S/. 228.81"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total"
                android:layout_width="396dp"
                android:layout_height="40dp"
                android:paddingStart="20dp"

                android:text="Importe Total:                                               S/. 1,500.00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="480dp"
        android:layout_marginStart="330dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_add_to_cart" />

</RelativeLayout>
